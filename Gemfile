source "https://rubygems.org"
#     bundle exec jekyll serve
gem "jekyll", "~> 4.2.2"

group :jekyll_plugins do
    gem 'jekyll-timeago'
    gem 'jekyll-minify-html'
    gem 'jekyll-feed'
    gem 'jekyll-sitemap'
    gem 'jekyll-paginate'
    gem 'jekyll-seo-tag'
    gem 'jekyll-archives'
    gem 'jekyll-figure'
    gem 'jekyll-dotenv'
    gem 'bootstrap'
    gem 'kramdown'
    gem 'rouge'
end

platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
end

gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]

gem "http_parser.rb", "~> 0.6.0", :platforms => [:jruby]
